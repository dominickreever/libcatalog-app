doctype html
html
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/stylesheets/style.css', type='text/css')

  body
    div(class='header')
      block header
        a(href='/catalog' class='home-link') Home

        span(class="filler")

        a(href='/catalog/books') Books

        a(href='/catalog/authors') Authors

        a(href='/catalog/genres') Genres

        a(href='/catalog/bookinstances') Book Instances

        a(href='#create') Create

    div(id='create' class="create-nav")
        a(href='/catalog/author/create') Create new author

        a(href='/catalog/genre/create') Create new genre

        a(href='/catalog/book/create') Create new book

        a(href='/catalog/bookinstance/create') Create new book instance

        div(class='col-sm-10')
    
    div(class='wrapper')
      block content
